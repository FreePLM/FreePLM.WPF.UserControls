<UserControl x:Class="FreePLM.WPF.UserControls.UserControls.SearchDocumentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:FreePLM.WPF.Core.Converters.Single;assembly=FreePLM.WPF.Core"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Search Documents"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Foreground="#0078D4"/>

        <!-- Help Text -->
        <TextBlock Grid.Row="0"
                   Text="Tip: Leave fields empty to match all documents. Enter partial text to filter results."
                   FontSize="12"
                   FontStyle="Italic"
                   Foreground="#666666"
                   Margin="0,35,0,15"
                   TextWrapping="Wrap"/>

        <!-- Search Criteria Section -->
        <Border Grid.Row="1"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="15"
                Margin="0,0,0,15"
                Background="#F9F9F9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Object ID -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Object ID:"
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding SearchObjectId, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBoolConverter}}"/>

                <!-- File Name -->
                <TextBlock Grid.Row="0" Grid.Column="3"
                           Text="File Name:"
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="4"
                         Text="{Binding SearchFileName, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBoolConverter}}"/>

                <!-- Project -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Project:"
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding SearchProject, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBoolConverter}}"/>

                <!-- Owner -->
                <TextBlock Grid.Row="1" Grid.Column="3"
                           Text="Owner:"
                           Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="4"
                         Text="{Binding SearchOwner, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBoolConverter}}"/>

                <!-- Status -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Status:"
                           Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="2" Grid.Column="1"
                          Text="{Binding SearchStatus}"
                          IsEditable="True"
                          IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBoolConverter}}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="" />
                    <ComboBoxItem Content="Private" />
                    <ComboBoxItem Content="InWork" />
                    <ComboBoxItem Content="Frozen" />
                    <ComboBoxItem Content="Released" />
                    <ComboBoxItem Content="Obsolete" />
                </ComboBox>

                <!-- Search Buttons -->
                <StackPanel Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,15">
                    <Button Content="Search"
                            Command="{Binding SearchCommand}"
                            Background="#0078D4"
                            Foreground="White"
                            BorderBrush="#0078D4"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#005A9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Clear"
                            Command="{Binding ClearCommand}"/>
                </StackPanel>

                <!-- Processing Indicator -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5"
                            Orientation="Horizontal"
                            Margin="0,5"
                            Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="Searching..."
                               Foreground="#0078D4"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ProgressBar IsIndeterminate="True"
                                 Width="100"
                                 Height="4"/>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5"
                           Text="{Binding StatusMessage}"
                           Foreground="#666666"
                           FontStyle="Italic"
                           Margin="0,5,0,0"/>
            </Grid>
        </Border>

        <!-- Search Results DataGrid -->
        <Border Grid.Row="2"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Margin="0,0,0,15">
            <DataGrid ItemsSource="{Binding SearchResults}"
                      SelectedItem="{Binding SelectedDocument}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowHeight="30"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Object ID" Binding="{Binding ObjectId}" Width="140"/>
                    <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" MinWidth="150"/>
                    <DataGridTextColumn Header="Revision" Binding="{Binding Revision}" Width="80"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                    <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="150"/>
                    <DataGridTextColumn Header="Project" Binding="{Binding Project}" Width="120"/>
                    <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="130"/>
                    <DataGridCheckBoxColumn Header="Checked Out" Binding="{Binding IsCheckedOut}" Width="95"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F2FF"/>
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Open Selected"
                    Command="{Binding OpenCommand}"
                    Background="#0078D4"
                    Foreground="White"
                    BorderBrush="#0078D4"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
