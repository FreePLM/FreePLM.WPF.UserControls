<UserControl x:Class="FreePLM.WPF.UserControls.UserControls.DocumentInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:FreePLM.WPF.Core.Converters.Single;assembly=FreePLM.WPF.Core"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600"
             Background="White">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>

        <Style TargetType="TextBlock" x:Key="SectionHeaderStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="Border" x:Key="InfoRowStyle">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Document Information"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,15"
                       Foreground="#0078D4"/>

            <!-- Basic Information Section -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Basic Information"
                           Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Object ID:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding ObjectId}" Style="{StaticResource ValueStyle}" FontFamily="Consolas"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="File Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding FileName}" Style="{StaticResource ValueStyle}" FontWeight="SemiBold"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Current Revision:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding CurrentRevision}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Status:" Style="{StaticResource LabelStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Border Background="#E8F5E9"
                                    Padding="8,3"
                                    CornerRadius="3"
                                    BorderBrush="#4CAF50"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding Status}"
                                           Foreground="#2E7D32"
                                           FontWeight="SemiBold"
                                           FontSize="11"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="File Size:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding FileSizeFormatted}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="File Type:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding FileExtension}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Ownership Section -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Ownership"
                           Style="{StaticResource SectionHeaderStyle}"/>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Owner:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Owner}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Created By:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding CreatedBy}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Created Date:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding CreatedDate, StringFormat='{}{0:g}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Modified By:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding ModifiedBy}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource InfoRowStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Modified Date:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding ModifiedDate, StringFormat='{}{0:g}'}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Check-Out Status Section -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Check-Out Status"
                           Style="{StaticResource SectionHeaderStyle}"/>

                <!-- Checked Out State -->
                <Border Visibility="{Binding IsCheckedOut, Converter={StaticResource BoolToVisConverter}}"
                        Background="#FFF3E0"
                        BorderBrush="#FF9800"
                        BorderThickness="1"
                        Padding="12"
                        CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="ðŸ”’"
                                   FontSize="24"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding CheckOutStatusText}"
                                       FontWeight="SemiBold"
                                       Foreground="#E65100"/>
                            <TextBlock Text="The document is currently locked for editing."
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Available State -->
                <Border Visibility="{Binding IsCheckedOut, Converter={StaticResource InverseBoolToVisConverter}}"
                        Background="#E8F5E9"
                        BorderBrush="#4CAF50"
                        BorderThickness="1"
                        Padding="12"
                        CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="âœ“"
                                   FontSize="24"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"
                                   Foreground="#4CAF50"
                                   FontWeight="Bold"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Available"
                                       FontWeight="SemiBold"
                                       Foreground="#2E7D32"/>
                            <TextBlock Text="The document is available for check-out."
                                       FontSize="11"
                                       Foreground="#666666"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
